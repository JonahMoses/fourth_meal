<div class="navbar navbar-inverse">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#"><%= current_restaurant.title %></a>
  </div>
  <div class="navbar-collapse collapse navbar-inverse-collapse">
    <ul class="nav navbar-nav">
      <li><a href="/">Food Fight</a></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Menu<b class="caret"></b></a>
        <ul class="dropdown-menu" role="menu">
          <% current_restaurant.items.each do |item| %>
            <li><%= link_to "#{item.title}", "/#{current_restaurant.slug}/#{item.id}" %></a></li>
          <% end %>
        </ul>
      </li>
      <li><a href="#">Order History</a></li>
      <li><a href="#">Contact</a></li>
      <% if current_user && current_user.email %>
        <li><%= link_to "My profile", edit_user_path(current_user.id) %></li>
      <% end %>

      <% if current_user && current_user.admin? %>
        <li><%= link_to "Dashboard", dashboard_path %></li>
      <% end %>

    </ul>

    <ul class="nav navbar-nav navbar-right">
      <% if @current_order != nil %>
          <% if current_restaurant.id == @current_order.restaurant_id %>
            <li><%= link_to "View Items in Cart: #{@current_order.items_count}", "/#{current_restaurant.slug}/order/#{@current_order.id}", class: "View Items" %></a></li>
          <% end %>
      <% else %>
          <li><a>Empty Cart :(</a></li>
      <% end %>

      <%= render "users/user_nav" %>
    </ul>

  </div>
</div>
