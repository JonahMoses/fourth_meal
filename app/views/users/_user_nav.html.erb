
<% if current_user %>
  <% if current_user.guest? %>
    <% if @restaurant == nil %>
      <li><%= link_to "Become a member", sign_up_path %></li>
    <% end %>
    <li><%= link_to "Log In", log_in_path %></li>
  <% else %>
    <li><%= link_to "#{current_user.display_name_available?}", edit_user_path(current_user.id) %></li>
    <li><%= link_to "Log Out", log_out_path, method: :post %></li>
  <% end %>
<% else %>
  <li><%= link_to "Become a member", sign_up_path %></li>
  <li><%= link_to "Log In", log_in_path %></li>
<% end %>

