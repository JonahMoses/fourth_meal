<div class="navbar navbar-inverse">
  <div class="navbar-header">
    <a id="home-link" class="navbar-brand" href="/">Food Fight</a>
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

  </div>
  <div class="navbar-collapse collapse navbar-inverse-collapse">
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Restaurants<b class="caret"></b></a>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to "Available Restaurants", restaurants_path %></a></li>
          <li class="divider"></li>
            <% @restaurants.each do |restaurant| %>
            <li><%= link_to "#{restaurant.title}", "/#{restaurant.slug}" %></a></li>
          <% end %>
        </ul>
      </li>
      <li><a href="#">Order History</a></li>
